<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render 'books/sidebar', book_new: @book_new, user: @user %>
		</div>

	<div class="col-lg-9">
		<h1>Books</h1>
			<table class="table table-hover">
				<thead>
				<tr>
					<th><th>title<th>opinion
				</thead>

					<% @user.books.each do |book| %>
				<tr>
					<td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
					<td><%= link_to "#{book.title}", book_path(book.id) %>
					<td><%= book.body %>
					<% end %>
			</table>
	</div>
</div>
</div>