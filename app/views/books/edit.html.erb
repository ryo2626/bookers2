<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>

	<% if @book.errors.any? %>
    	<div class="alert">
      	<ul>
        <%= @book.errors.count %>errors prohibited this user from being saved:
      	</ul>
      	<ul>
        	<% @book.errors.full_messages.each do |msg| %>
        		<%= msg %>
        	<% end %>
      	</ul>
    	</div>
  	<% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <h4><%= f.submit 'Update Book' %></h4>

<% end %>

<p>
	<%= link_to "Show", book_path(@book.id) %>
	|
	<%= link_to "Back", books_path %>
</p>